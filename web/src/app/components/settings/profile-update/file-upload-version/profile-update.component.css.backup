.profile-update-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    min-height: 100vh;
    background-color: #f5f7fb;
    font-family: 'Inter', sans-serif;
    overflow-y: auto; /* 添加垂直滚动条 */
}

.profile-update-header {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
}

.back-btn {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #666;
    font-weight: 500;
    margin-right: 20px;
    cursor: pointer;
    transition: color 0.2s;
}

.back-btn:hover {
    color: #333;
}

.back-btn i {
    margin-right: 8px;
}

.profile-update-header h1 {
    margin: 0;
    font-size: 1.5rem;
    color: #333;
}

.profile-update-content {
    background: white;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.profile-update-section {
    margin-bottom: 30px;
}

.profile-update-section h2 {
    margin: 0 0 20px;
    font-size: 1.1rem;
    color: #333;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
}

.custom-avatar-upload {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #eee;
}

.avatar-preview {
    display: flex;
    justify-content: center;
    margin-bottom: 15px;
}

.preview-image {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #409eff;
}

.upload-controls {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.upload-button {
    display: inline-block;
    padding: 8px 16px;
    background-color: #409eff;
    color: white;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s;
    margin-bottom: 10px;
}

.upload-button:hover {
    background-color: #66b1ff;
}

.upload-description {
    text-align: center;
    color: #666;
    font-size: 0.9rem;
    margin: 10px 0;
}

.upload-progress {
    width: 100%;
    max-width: 300px;
    margin-top: 10px;
}

.progress-bar {
    width: 100%;
    height: 8px;
    background-color: #e0e0e0;
    border-radius: 4px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background-color: #409eff;
    transition: width 0.3s ease;
}

.progress-text {
    text-align: center;
    font-size: 0.8rem;
    color: #666;
    margin-top: 5px;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #333;
}

.form-control {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 1rem;
    transition: border-color 0.2s;
    box-sizing: border-box;
}

.form-control:focus {
    outline: none;
    border-color: #409eff;
    box-shadow: 0 0 0 2px rgba(64, 158, 255, 0.2);
}

.error-message {
    color: #ff4d4f;
    background-color: #fff0f0;
    padding: 10px;
    border-radius: 6px;
    margin-bottom: 15px;
    border: 1px solid #ffccc7;
}

.success-message {
    color: #52c41a;
    background-color: #f6ffed;
    padding: 10px;
    border-radius: 6px;
    margin-bottom: 15px;
    border: 1px solid #b7eb8f;
}

.profile-update-actions {
    display: flex;
    justify-content: center;
    margin-top: 30px;
}

.save-btn {
    padding: 12px 40px;
    background-color: #409eff;
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    font-size: 1rem;
    transition: background-color 0.2s;
}

.save-btn:hover:not(:disabled) {
    background-color: #66b1ff;
}

.save-btn:disabled {
    background-color: #a0cfff;
    cursor: not-allowed;
}

@media (max-width: 600px) {
    .custom-avatar-upload {
        text-align: center;
    }
}